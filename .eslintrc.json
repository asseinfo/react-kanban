{
  "extends": [
    "standard",
    "standard-react",
    "plugin:jest/recommended",
    "plugin:jest/style",
    "prettier/react",
    "plugin:prettier/recommended"
  ],
  "plugins": ["react-hooks"],
  "env": {
    "jest": true
  },
  "rules": {
    "react/prop-types": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    "no-nested-ternary": "error",
    "require-await": "error",
    "no-warning-comments": "warn"
  }
}
